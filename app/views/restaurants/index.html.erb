<div class="container">
  <% @restaurants.each do |restaurant|%>
    <div class="card">
      <h5 class="card-header"><%= restaurant.category.capitalize %></h5>
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><%= restaurant.address %></p>
          <p class="card-text"><%= restaurant.phone_number %></p>
          <%= link_to "See Reviews", restaurant, :class => "btn btn-primary" %>
        </div>
      </div>
  <% end %>
</div>
