<%= link_to "â¬… Search Other Restaurants", restaurants_path, :class => "btn btn-primary" %>
<div class="card">
  <h5 class="card-header"><%= @restaurant.category.capitalize %></h5>
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <p class="card-text"><%= @restaurant.address %></p>
    <p class="card-text"><%= @restaurant.phone_number %></p>
  </div>
</div>
<%= link_to "Write Review", new_restaurant_review_path(@restaurant), :class => "btn btn-primary" %>

<% @reviews.each do |review| %>
  <%= render '/review', review: review %>
<% end %>
